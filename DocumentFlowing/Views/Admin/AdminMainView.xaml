<Window x:Class="DocumentFlowing.Views.Admin.AdminMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DocumentFlowing.Views.Controls"
        Title="Document flow" Height="450" Width="800" Icon="/Assets/icon.png">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Навигационная панель -->
        <StackPanel Background="#EFEFEF" Grid.Column="0">
            <TextBlock Text="Admin panel" FontWeight="Bold" FontSize="18" Margin="10,20,10,20" />

            <!-- Убраны Click-обработчики, только Command -->
            <Button Content="Templates" 
                    Margin="10,5" 
                    Command="{Binding ShowTemplatesCommand}"/>
            
            <Button Content="Users" 
                    Margin="10,5" 
                    Command="{Binding ShowUsersCommand}"/>
            
            <UserControl>
                <controls:SidebarView DataContext="{Binding SidebarViewModel}"/>
            </UserControl>
        </StackPanel>

        <!-- Привязка к CurrentView из ViewModel -->
        <ContentControl x:Name="ContentArea" Grid.Column="1" Margin="10" 
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>