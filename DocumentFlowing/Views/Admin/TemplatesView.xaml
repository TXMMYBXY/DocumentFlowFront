<UserControl x:Class="DocumentFlowing.Views.Admin.TemplatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <TextBlock Text="Templates Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel>
            <ListView Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Template name" Width="200"/>
                        <GridViewColumn Header="Created" Width="150"/>
                        <GridViewColumn Header="Actions" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Add Template" Width="150" Margin="0,0,0,10" Click="addTemplate_Click"/>
        </StackPanel>
    </Grid>
</UserControl>