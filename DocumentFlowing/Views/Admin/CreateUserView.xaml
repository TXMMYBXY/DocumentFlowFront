<Window x:Class="DocumentFlowing.Views.Admin.CreateUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:helpers="clr-namespace:DocumentFlowing.Common"
        xmlns:common="clr-namespace:DocumentFlowing.Common"
        mc:Ignorable="d"
        Title="CreateUserView" Height="500" Width="550"
        Icon="../../Assets/icon.png">
    <Window.Resources>
        <common:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <common:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Email:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" 
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="3"
                     helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"
                     />
        
        <TextBlock Grid.Row="4" Text="Подтверждение пароля:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox" 
                     helpers:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Grid.Row="5"
                     Margin="0,0,0,10"
                     />
        
        <TextBlock Grid.Row="6" 
                   Text="Пароли не совпадают" 
                   Foreground="Red"
                   Visibility="{Binding ShowPasswordMismatchError, Converter={StaticResource BoolToVis}}"
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="7" Text="ФИО:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="8" 
                 Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="9" Text="Отдел:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="10"
                  IsEditable="True"
                  ItemsSource="{Binding DepartmentSuggestions}"
                  Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}"
                  Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="11" Text="Роль:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="12"
                  ItemsSource="{Binding Roles}"
                  DisplayMemberPath="Title"
                  SelectedItem="{Binding SelectedRole}"
                  Margin="0,0,0,10"/>
        
        
        <TextBlock Grid.Row="13"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, 
                   Converter={StaticResource StringToVisibilityConverter}}"/>
        
        <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" 
                    Command="{Binding CreateCommand}"
                    Width="80"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
