<UserControl x:Class="DocumentFlowing.Views.Admin.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <TextBlock Text="User Management" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel>
            <Button Content="Add User" Width="150" Margin="0,0,0,10"/>
            <ListView Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Username" Width="200"/>
                        <GridViewColumn Header="Role" Width="150"/>
                        <GridViewColumn Header="Status" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
