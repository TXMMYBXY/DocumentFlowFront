<Window x:Class="DocumentFlowing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFlowing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <!-- Панель навигации слева -->
        <StackPanel Width="200" Background="#EEE" HorizontalAlignment="Left">
            <Button Content="Авторизоваться" Margin="10"/>
            <Button Content="Настройки" Margin="10"/>
            <Button Content="Справка" Margin="10"/>
        </StackPanel>

        <!-- Основная область -->
        <Grid Margin="210,0,0,0">
            <TextBlock Text="Добро пожаловать в DocumentFlowing!" 
                        FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
