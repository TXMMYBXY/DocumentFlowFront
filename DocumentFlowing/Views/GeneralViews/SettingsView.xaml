<UserControl x:Class="DocumentFlowing.Views.Admin.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <TextBlock Text="System Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel>
            <CheckBox Content="Enable logging" Margin="0,5"/>
            <CheckBox Content="Allow auto updates" Margin="0,5"/>
            <Button Content="Save Changes" Width="150" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
