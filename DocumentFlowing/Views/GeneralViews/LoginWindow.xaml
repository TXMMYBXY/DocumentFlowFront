<Window x:Class="DocumentFlowing.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="DocumentFlowing — Login"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F6F8"
        Icon="C:\Users\myuch\source\repos\DocumentFlowing\DocumentFlowFront\DocumentFlowing\Assets\icon.png">

    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">

            <TextBlock Text="Добро пожаловать"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="LoginBox"
                     mah:TextBoxHelper.Watermark="Email"
                     Margin="0,5"
                     Height="35"/>

            <PasswordBox x:Name="PasswordBox"
                         mah:TextBoxHelper.Watermark="Password"
                         Margin="0,5"
                         Height="35"/>

            <Button x:Name="LoginButton"
                    Content="Login"
                    Margin="0,20,0,10"
                    Click="_LoginClickAsync"
                    Background="#2E3A59"
                    Foreground="White"
                    Height="35"/>

            <Button Content="Выйти"
                    Click="_ReturnBackClick"
                    Foreground="#2E3A59"
                    Background="Transparent"
                    Margin="0,5"/>

        </StackPanel>
    </Grid>
</Window>