<Window x:Class="DocumentFlowing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFlowing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Width="200" Background="#EEE" Grid.Column="0">
            <Button Content="LogIn" Margin="10" Click="loginClick"/>
            <Button Content="Settings" Margin="10" Click="settingsClick"/>
            <Button Content="Help" Margin="10" Click="helpClick"/>
        </StackPanel>
        <ContentControl x:Name="ContentArea" Grid.Column="1" Margin="10"/>
        <!--<Grid Margin="210,0,0,0">
            <TextBlock Text="Wellcome to DocumentFlowing!" 
                        FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            
        </Grid>-->
    </Grid>
</Window>
