<Window x:Class="DocumentFlowing.Views.Boss.BossMainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:DocumentFlowing.Views.Controls"
        Title="Administration Panel"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#EFEFEF" Grid.Column="0">
            <TextBlock Text="Boss Panel" FontWeight="Bold" FontSize="18" Margin="10,20,10,20"/>

            <Button Content="Contracts" 
                    Margin="10,5"
                    Command="{Binding ShowContractsCommand}"/>
            
            <Button Content="Statements" 
                    Margin="10,5"
                    Command="{Binding ShowReportsCommand}"/>
            
            <Button Content="Archive" 
                    Margin="10,5"
                    Command="{Binding ShowArchiveCommand}"/>
            <UserControl>
                <controls:SidebarView DataContext="{Binding SidebarViewModel}"/>
            </UserControl>
        </StackPanel>
        
        <ContentControl x:Name="ContentArea" 
                        Grid.Column="1" 
                        Margin="10" 
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>
