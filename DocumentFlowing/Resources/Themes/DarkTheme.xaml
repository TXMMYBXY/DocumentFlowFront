<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FF505050"/>
    <SolidColorBrush x:Key="PlaceholderForegroundBrush" Color="#FF888888"/>

    <!-- Текст -->
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FFF1F1F1"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#FF999999"/>
    <SolidColorBrush x:Key="ErrorForegroundBrush" Color="#FFCF6679"/>

    <!-- Акцентные цвета (для кнопок и выделения) -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="White"/>

    <!-- Цвета для DataGrid -->
    <SolidColorBrush x:Key="DataGrid.Row.Hover.BackgroundBrush" Color="#FF4A4A4F"/>
    <SolidColorBrush x:Key="DataGrid.Row.Selected.BackgroundBrush" Color="#FF005A9E"/>
    <SolidColorBrush x:Key="DataGrid.Row.Inactive.ForegroundBrush" Color="#FF888888"/>
    <SolidColorBrush x:Key="DataGrid.Row.Inactive.Selected.ForegroundBrush" Color="#FFCCCCCC"/>
    
    <!-- Цвета для ProgressBar -->
    <SolidColorBrush x:Key="ProgressBar.BackgroundBrush" Color="#FF3F3F46"/>

</ResourceDictionary>